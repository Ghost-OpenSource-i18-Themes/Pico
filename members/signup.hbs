{{!< ../default}}

<div class="gh-page">
    <div class="pico-container">

    {{#if @member.paid}}

        {{!-- Logged in, paying member: Redirect home --}}
        <script>window.location = '{{@site.url}}';</script>

    {{else if @member}}

        {{!-- Logged in, not paying: Check out --}}
        <div class="gh-checkout-form">
            <h1 class="gh-checkout-title">{{t "Choose your subscription"}}</h1>
            <p>{{t "Unlock full access to {{@site.title}} and see the entire library of members-only content & updates"}}</p>
            <div class="gh-checkout-box">
                <div class="gh-checkout-plan">
                    <header class="gh-checkout-plan-header">
                        <h3>{{t "Monthly"}}</h3>
                        <strong>{{price currency=@price.currency}}{{@price.monthly}}</strong> / {{t "month"}}
                    </header>
                    <div class="gh-checkout-plan-content">
                        <ul>
                            <li>{{t "Full access to all private posts"}}</li>
                            <li>{{t "Regular updates with new content"}}</li>
                            <li>{{t "Support independent publishing"}}</li>
                            <li>{{t "Simple, secure card payment"}}</li>
                        </ul>
                        <a class="gh-button gh-button-primary fit" href="javascript:" data-members-plan="Monthly">
                             <span class="gh-button-content">{{t "Choose this plan"}}</span>
                            <span class="gh-button-loader">{{> "icons/loader"}}</span>
                        </a>
                    </div>
                </div>
                <div class="gh-checkout-plan">
                    <header class="gh-checkout-plan-header">
                        <h3>{{t "Yearly"}}</h3>
                        <strong>{{price currency=@price.currency}}{{@price.yearly}}</strong> / {{t "year"}}
                    </header>
                    <div class="gh-checkout-plan-content">
                        <ul>
                            <li>{{t "Full access to all private posts"}}</li>
                            <li>{{t "Regular updates with new content"}}</li>
                            <li>{{t "Support independent publishing"}}</li>
                            <li>{{t "Simple, secure card payment"}}</li>
                            <li>{{t "One easy payment instead of 12!"}}</li>
                        </ul>
                        <a class="gh-button gh-button-primary fit" href="javascript:" data-members-plan="Yearly">
                             <span class="gh-button-content">{{t "Choose this plan"}}</span>
                            <span class="gh-button-loader">{{> "icons/loader"}}</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>

    {{else}}

        {{!-- Not logged in: Sign up --}}
        <form class="gh-auth-form" data-members-form="signup">
            <h1 class="gh-auth-title">{{t "Signup to {{@site.title}}"}}</h1>
            <p>{{@site.description}}</p>
            <div class="gh-auth-box">
                <input class="gh-input" data-members-email type="email" placeholder="{{t "Type your email..."}}" required="true" autocomplete="false" />
                <button class="gh-button gh-button-primary" type="submit">
                    <span class="gh-button-content">{{t "Continue"}}</span>
                    <span class="gh-button-loader">{{> "icons/loader"}}</span>
                </button>
            </div>
            <p><small>{{t "Already have an account?"}} <a href="/signin/">{{t "Sign in"}}</a></small></p>
            <div class="message-success"><strong>{{t "Great!"}}</strong> {{t "Check your inbox and click the link to confirm your subscription"}}</div>
            <div class="message-error">{{t "Please enter a valid email address!"}}</div>
        </form>

    {{/if}}

    </div>
</div>

<style>.pico-cta{display:none;}</style>