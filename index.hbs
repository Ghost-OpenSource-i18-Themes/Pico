{{!< default}}

<div class="gh-page">
    <div class="pico-container">

        <header class="pico-sitehead">
            {{#if @site.logo}}
                <img src="{{@site.logo}}" alt="{{@site.title}}" />
            {{/if}}
            <div class="pico-sitehead-content">
                <h1>{{@site.title}}</h1>
                <p>{{@site.description}}</p>
                <div class="pico-sitehead-cta">
                    {{#if @member.paid}}
                        <a class="gh-button gh-button-primary" href="/account/">{{t "My account"}}</a>
                        <a class="gh-button" href="javascript:" data-members-signout>{{t "Sign out"}}</a>
                    {{else if @member}}
                        <a class="gh-button gh-button-primary" href="/signup/">{{t "Upgrade"}}</a>
                        <a class="gh-button" href="javascript:" data-members-signout>{{t "Sign out"}}</a>
                    {{else}}
                        <a class="gh-button gh-button-primary" href="/signup/">{{t "Subscribe now"}}</a>
                        <a class="gh-button" href="/signin/">{{t "Sign in"}}</a>
                    {{/if}}
                </div>
            </div>
        </header>

        <div class="gh-postfeed">
        {{#foreach posts}}

            {{> "card"}} {{!-- partials/card.hbs --}}

        {{/foreach}}
        </div>

    </div>
</div>